<Window x:Class="Actividad1_PiedraPapelTijeras.Lobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Actividad1_PiedraPapelTijeras"
        mc:Ignorable="d"
        Title="Lobby" Height="450" Width="800" WindowStartupLocation="CenterScreen">

    
    <StackPanel Margin="20">
        <TextBlock FontSize="20">
            Usuario:
            <TextBlock FontFamily="20" Text="{Binding Jugador1}"></TextBlock>
        </TextBlock>
        <TextBlock FontStyle="Italic" FontSize="25" Text="{Binding Mensaje}"></TextBlock>

        <Button HorizontalAlignment="Center" IsEnabled="False">Iniciar Partida</Button>
    </StackPanel>
</Window>
